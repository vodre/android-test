<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/eye"
            android:layout_width="120dp"
            android:layout_height="120dp"
           android:layout_centerHorizontal="true"
            tools:background="@color/colorPrimary"
            app:lottie_rawRes="@raw/eye"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />
        <TextView
            android:id="@+id/repo_watchers"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@+id/eye"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            tools:text="repo_watchers"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/star"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            tools:background="@color/colorPrimary"
            app:lottie_rawRes="@raw/star"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />
        <TextView
            android:id="@+id/repo_stars"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_below="@+id/star"
            android:layout_marginBottom="1dp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            tools:text="repo_stars"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/fork"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            tools:background="@color/colorPrimary"
            app:lottie_rawRes="@raw/branch"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />
        <TextView
            android:id="@+id/repo_forks"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_below="@+id/fork"
            android:layout_marginBottom="1dp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            tools:text="repo_forks"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/warning"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            tools:background="@color/colorPrimary"
            app:lottie_rawRes="@raw/warning"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />
        <TextView
            android:id="@+id/repo_open_issues"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_below="@+id/warning"
            android:layout_marginBottom="1dp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            tools:text="repo_forks"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/planet"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            tools:background="@color/colorPrimary"
            app:lottie_rawRes="@raw/planet"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />
        <TextView
            android:id="@+id/repo_language"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_below="@+id/planet"
            android:layout_marginBottom="1dp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            tools:text="repo_forks"/>
    </RelativeLayout>
</LinearLayout>
</ScrollView>